<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>

</head>

<body>

    <!-- Main content here -->
    <main>
        <div class="container">
            <section class="view-trips">
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <h2>Current Trips</h2>
                        <p>Something to look forward to...</p>
                    </div>
                </div>
            </section>

            <section id="info1">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <div class="info-left">
                                <img id="firstImg" src="./assets/img/backpack.jpg">
                                <div class="textImage">
                                    <span>Plan a trip to look forward to and create memories to look back on</span>
                                </div>
                                <div>
                                    <button id="exploreBtn" type="button" class="btn btn-warning">Explore</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <div class="info-right">
                                <br>
                            </div>
                        </div>
                    </div>
            </section>

            <!-- MODAL-->

            <!-- Central Modal Medium Warning -->
            <div class="modal fade" id="centralModalWarning" tabindex="-1" role="dialog" aria-labelledby="myModal" aria-hidden="true">
                <div class="modal-dialog modal-notify modal-warning" role="document">
                    <!--Content-->
                    <div class="modal-content">
                        <!--Header-->
                        <div class="modal-header">
                            <p class="card-title" class="heading lead">Destination</p>

                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true" class="white-text">&times;</span>
                            </button>

                        </div>

                        <!--Body-->
                        <div class="modal-body">
                            <div class="text-center">
                                <p>
                                    <ul id="tripInfo" class="list-group list-group-flush">
                                        <li class="list-group-item">
                                            <span class="badge badge-warning">Sneha</span>
                                            <span class="badge badge-warning">Wesley</span>
                                            <span class="badge badge-warning">Connor</span>
                                            <span class="badge badge-warning">William</span>
                                            <span class="badge badge-warning">Addis</span>
                                        </li>
                                        <li class="list-group-item">
                                            <i class="fa fa-calendar-o" aria-hidden="true"></i>
                                        </li>
                                        <li class="list-group-item">
                                            <i class="fa fa-dollar" aria-hidden="true"></i>
                                        </li>
                                        <li>
                                            <div class="md-form">
                                                <textarea id="textarea-char-counter"class="form-control md-textarea" length="120" rows="3"></textarea>
                                                <label for="textarea-char-counter">Type your text</label>
                                            </div>
                                        </li>
                                    </ul>
                                </p>
                            </div>
                        </div>

                        <!--Footer-->
                        <div class="modal-footer justify-content-center">
                            Let the excitement begin ...
                        </div>
                    </div>
                    <!--/.Content-->
                </div>
            </div>
            <!-- Central Modal Medium Warning-->

